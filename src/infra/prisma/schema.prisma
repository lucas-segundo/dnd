generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
}

model Class {
  id        Int      @id @default(autoincrement())
  name      String
  subClasses SubClass[]

  @@map("classes")
}

model SubClass {
  id        Int      @id @default(autoincrement())
  name      String
  classId   Int      @map("class_id")
  class     Class    @relation(fields: [classId], references: [id])

  @@map("sub_classes")
}